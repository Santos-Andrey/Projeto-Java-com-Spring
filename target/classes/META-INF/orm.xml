<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
		xmlns="http://xmlns.jpc.org/xml/ns/persistence/orm"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jpc.org/xml/ns/persistence http://xmlns.jpc.org/xml/persistence"
		version="2.2">
		
		<named-query name="Restaurante.ConsultarPorNome">
		<query>
		from Restaurante 
		 where nome like 
		 ('%', :name, '%') and cozinha.id = :id
		 </query>
		 </named-query>
		</entity-mappings>